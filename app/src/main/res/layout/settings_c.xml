<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_c">

    <ImageView
        android:id="@+id/btnBack9"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="35dp"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <Button
        android:id="@+id/cmdUpdateInfo"
        android:layout_width="127dp"
        android:layout_height="34dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/yesbtn"
        android:text="Update"
        android:onClick="UpdateInfo"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cmdCancelUpdateInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCity" />

    <Button
        android:id="@+id/cmdCancelUpdateInfo"
        android:layout_width="127dp"
        android:layout_height="34dp"
        android:layout_marginBottom="58dp"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/nobtn"
        android:text="Cancel"
        android:onClick="CancelUpdateInfo"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProvince" />

    <EditText
        android:id="@+id/txtProvince"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/transparentboxb"
        android:ems="10"
        android:hint="Laguna"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="#728aa5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCity"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress" />

    <EditText
        android:id="@+id/txtCity"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/transparentboxb"
        android:ems="10"
        android:hint="Sta. Rosa"
        android:inputType="text"
        android:padding="8dp"
        android:textColorHint="#728aa5"
        app:layout_constraintEnd_toStartOf="@+id/txtProvince"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress" />

    <EditText
        android:id="@+id/txtLName"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/transparentboxb"
        android:ems="10"
        android:hint="Doe"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHint="#728aa5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMName"
        app:layout_constraintTop_toBottomOf="@+id/txtFName" />

    <EditText
        android:id="@+id/txtMName"
        android:layout_width="130dp"
        android:layout_height="43dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/transparentboxb"
        android:ems="10"
        android:hint="Fero"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHint="#728aa5"
        app:layout_constraintEnd_toStartOf="@+id/txtLName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFName" />

    <EditText
        android:id="@+id/txtFName"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="138dp"
        android:background="@drawable/transparentboxb"
        android:ems="10"
        android:hint="John"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textColorHint="#728aa5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBack9" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="270dp"
        android:layout_height="43dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="51dp"
        android:background="@drawable/transparentboxb"
        android:ems="10"
        android:hint="123 ABC Bldg."
        android:inputType="textPostalAddress"
        android:padding="8dp"
        android:textColorHint="#728aa5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLName" />

</android.support.constraint.ConstraintLayout>